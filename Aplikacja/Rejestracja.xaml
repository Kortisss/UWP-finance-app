<Page
    x:Class="Aplikacja.Rejestracja"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aplikacja"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Rejestracja" FontSize="36" Margin="4" TextAlignment="Center"/>
            <TextBlock x:Name="ErrorMessage" Text="" FontSize="20" Margin="4" Foreground="Red" TextAlignment="Center"/>
            <TextBox x:Name="EmailTextBox" Margin="4" Width="250" PlaceholderText="Email"/>
            <TextBox x:Name="UsernameTextBox" Margin="4" Width="250" PlaceholderText="Imie"/>
            <PasswordBox x:Name="PasswordTextBox" Margin="4" Width="250" PlaceholderText="Hasło"/>
            <PasswordBox x:Name="PasswordTextBox2" Margin="4" Width="250" PlaceholderText="Wprowadz hasło ponownie"/>
            <Button x:Name="PassportSignInButton" Content="Zarejestruj się" Background="DodgerBlue" Foreground="White"
        Click="RegisterButton_Click" Width="120" HorizontalAlignment="Center" Margin="0,20"/>
        </StackPanel>

    </Grid>
</Page>
