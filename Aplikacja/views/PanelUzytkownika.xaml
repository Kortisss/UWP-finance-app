                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Name="btnWyloguj" Label="wyloguj" Click="btnWyloguj_Click" >
                <AppBarButton.Icon>
                    <PathIcon Data="M4 18h2v2h12V4H6v2H4V3a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v18a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-3zm2-7h7v2H6v3l-5-4 5-4v3z"/>
                </AppBarButton.Icon>
            </AppBarButton>
        </StackPanel>
    </Grid>
</Page>
