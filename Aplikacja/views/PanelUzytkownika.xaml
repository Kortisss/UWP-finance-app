<Page x:Name="Page" Loaded="Page_Loaded"
    x:Class="Aplikacja.views.PanelUzytkownika"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aplikacja.views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="1"  Name="test" HorizontalAlignment="Center" FontSize="30"/>
        <StackPanel Grid.Row="1" Grid.Column="2">

            <TextBlock Text="diagramy" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <!--<Charting:Chart x:Name="ColumnChart" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0" Width="399"
                        Height="200">
                <Charting:ColumnSeries Title="Smart Phone Popular" Margin="0" IndependentValuePath="typ_wydatku" DependentValuePath="kwota" IsSelectionEnabled="True"/>
            </Charting:Chart>-->

            <Charting:Chart x:Name="PieChart" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row ="0" Grid.Column="1" Width="399"
                        Height="200">
                <Charting:PieSeries Title="Smart Phone Popular" Margin="0" IndependentValuePath="typ_wydatku" DependentValuePath="kwota" IsSelectionEnabled="True"/>
            </Charting:Chart>

            <!--<Charting:Chart x:Name="LineChart" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row ="0" Grid.Column="2" Width="399"
                        Height="200">
                <Charting:LineSeries Title="Smart Phone Popular" Margin="0" IndependentValuePath="Name" DependentValuePath="Amount" IsSelectionEnabled="True"/>
            </Charting:Chart>

            <Charting:Chart x:Name="BarChart" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row ="1" Grid.Column="0" Width="399"
                        Height="200">
                <Charting:BarSeries Title="Smart Phone Popular" Margin="0" IndependentValuePath="Name" DependentValuePath="Amount" IsSelectionEnabled="True"/>
            </Charting:Chart>-->



        </StackPanel>
        <ListView Grid.Row="1" Grid.Column="1" Name="Output" VerticalAlignment="Top" ItemClick="Output_ItemClick" IsItemClickEnabled="True" HorizontalAlignment="Left" FontSize="15" Margin="0,50,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Grid.Row="1" Grid.Column="0" Background="#FF7E7E7E">
            <Image Margin="0 5 0 5" Source="/Assets/logo1.png" Width="50"/>
            <AppBarButton Name="btnDodaj"  Icon="Add" Label="Dodaj wpłatę" Click="btnDodaj_Click"/>
            <AppBarButton Name="btnUsun"  Icon="Remove" Label="Usuń wpłatę" Click="btnUsun_Click" Visibility="Collapsed"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Background="#FF7E7E7E">
            <AppBarButton Name="btnUstawienia" Label="ustawienia" Click="btnUstawienia_Click" >
